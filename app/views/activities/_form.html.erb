<% form_for([@response, @activity]) do |f| %>
  <%= f.error_messages %>
  <p>
<% @questions.each do |tq| %>
    <h2><%= tq.id.to_s + ". " + tq.question_long %></h2>
<%= hidden_field(tq.id, :question_id, :value => tq.id) %>

  </p>
  <p>
    <%= select(tq.id, :published, [ ['1) Yes, this donor publishes this information systematically for each activity', '1'],
				['2) Yes, this donor publishes this information sporadically on an ad hoc basis', '2'],
				['3) No, but this donor does collect this data', '3'],
				['4) No, and this donor doesn\'t collect this data either', '4'],
				['5) Don\'t know', '5']
					]) %>
  </p>
  <p>Do you know which system it's stored in?<br />
    <%= text_field(tq.id, :system) %>
  </p>
  <p>
    <%= f.label :evidence %><br />
    <%= text_area(tq.id, :evidence) %>
  </p>
  <p>
    <%= f.label :comments %><br />
    <%= text_area(tq.id, :comments) %>
  </p>
  <p>
    <%= f.label :entry_date %><br />
    <%= date_select(tq.id, :entry_date) %>
  </p>
<% end %>

    <%= submit_tag 'Submit' %>
<% end %>
