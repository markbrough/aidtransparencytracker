<h1>Listing users</h1>

<table>
  <tr>
    <th>Login</th>
    <th>Email</th>
    <th>Organisation</th>
    <th>Country</th>
    <th>Role</th>
    <th>Last login at</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%=h user.login %></td>
    <td><%=h user.email %></td>

    <td><%=h user.organisation_name %></td>
<% @thiscountryid = Country.find(user.country_id)%>
    <td><%=h @thiscountryid.name %></td>

    <td><%=h user.role %></td>
    <td><%=h user.last_login_at %></td>

    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New user', new_user_path %>
