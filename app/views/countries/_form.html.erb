<% form_for(@country) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :rows => 4 %>
  </p>
  <p>
    <%= f.check_box :recipient %> <%= f.label :recipient %>
  </p>
  <p>
    <%= f.check_box :donor %> <%= f.label :donor %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>
