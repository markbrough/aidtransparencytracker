<% form_for(@response) do |f| %>
  <%= f.error_messages %>

    <%= hidden_field(:response, :user_id, :value => current_user.id) %>

  <p>
    <b>Which donor are you answering questions about?</b><br />

<%= f.select :donor_id, Donor.find(:all , :order => "id") . collect { |s|#
	[(Country.find(s.country_id.to_s).name + " > " + s.name), s.id]} %>    

  </p>
  <p>
    <b>Which recipient country are you answering questions about?</b><br />

<%= f.select :recipient_id, Country.find(:all , :order => "id") . collect { |s|#
	[(s.name), s.id]} %>    
  </p>
  <p>
    <%= f.label :response_type %><br />
<%= f.select :response_type, QuestionType.find(:all , :order => "id") . collect { |s|#
	[(s.name), s.id]} %>    
  </p>
<!--  <p>
    <%= f.label :entry_date %><br />
    <%= f.date_select :entry_date %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :status %><br />
    <%= f.text_field :status %>
  </p>
-->	
  <p>
    <%= f.submit 'Submit' %>
  </p>
<% end %>
