<% form_for(@donor) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :country_id %><br />
    <%= f.select :country_id, Country.find(:all , :order => "id") . collect { |s|#
	[(s.name), s.id]} %>    
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :rows => 4 %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>
